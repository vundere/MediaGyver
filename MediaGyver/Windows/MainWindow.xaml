<Window x:Class="MediaGyver.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MediaGyver"
        mc:Ignorable="d"
        Title="MediaGyver" Height="450" Width="800">
    <Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="*"/>
		</Grid.ColumnDefinitions>

		<Button x:Name="MusicButton" Content="Music" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Column="0" Command="{Binding MusicButtonPressCommand}"/>
		<Button x:Name="MoviesButton" Content="Movies" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Column="1" Command="{Binding MoviesButtonPressCommand}"/>

	</Grid>
</Window>
